<div class = "signup_form">
<%= form_for(@user, url: signup_path) do |form| %>
 <%= render 'shared/error_messages' %>
  <h1>Sign Up</h1>
 
   <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "enter your name",class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
   </div> 
  
   <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
   </div>  
   <div class="form-group">
    <%= form.label :confirmation %>
    <%= form.text_field :password_confirmation, class: "form-control" %>
   </div> 
  <div class="actions text-center singup_button" >
   <%= form.submit "Create my account", class: "btn btn-primary" %>
  </div>
<% end %>
  <p class="account text-center">Already have an account? <%= link_to "Login here..", login_path %></p>
</div>